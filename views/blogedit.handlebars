<div class="card">
    <h3 class="card-header">Edit your Post</h3>
    <form class="card-body edit-post-form">
        <label for="blog-title" class="form-label">Title</label>
        <input name="blog-title" type="text" value="{{blog.title}}" class="form-input" />
        <label class="form-label" for="description">add content here</label>
        <input name="description" type="text" value="{{blog.description}}" class="form-input" />
        <button type="submit" class="btn">Update your Post</button>
        <button type="button" data-id="{{project.id}}" class="delete-post-btn btn">Delete your Post</button>
    </form>
</div>


<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>